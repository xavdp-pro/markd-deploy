# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=markd
MYSQL_USER=markd_user
MYSQL_PASSWORD=your_secure_password
MYSQL_HOST=localhost
MYSQL_PORT=3306

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_key_here_use_openssl_to_generate

# Encryption Key for password vault (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your_encryption_key_here_use_openssl_to_generate

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Frontend Configuration
FRONTEND_PORT=5173

# Application Settings
APP_ENV=production
DEBUG=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session Configuration
SESSION_TIMEOUT=3600

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=.md,.txt,.pdf,.jpg,.png

# Logging
LOG_LEVEL=INFO
